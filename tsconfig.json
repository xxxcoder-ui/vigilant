{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es6", "es7", "dom.iterable", "scripthost"],
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./app",
    "paths": {
      "actions": ["actions"],
      "components": ["components"],
      "assets": ["assets"]
    }
  },
  "files": ["app/index.tsx"],
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "types/*.d.ts",
    "node_modules/@types/**/*.d.ts"
  ],
  "exclude": ["dist"]
}
